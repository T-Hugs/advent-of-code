{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"lib": ["ES2019"],
		"noEmit": true,
		"strict": true,
		"moduleResolution": "node",
		"paths": {
			"js-combinatorics/commonjs/combinatorics": ["./node_modules/js-combinatorics"]
		},
		"typeRoots": ["./node_modules/@types", "./util/@types"],
		"types": ["global", "node"],
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"allowJs": true
	},
	"include": ["**/*.ts", "**/*.d.ts"]
}
